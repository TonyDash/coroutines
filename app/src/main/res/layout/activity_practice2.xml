<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cFF2a3c58"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRunNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/runNormal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/btnRunKt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/runKt"
        app:layout_constraintLeft_toRightOf="@id/btnRunNormal"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintTop_toTopOf="@id/btnRunNormal" />

    <Button
        android:id="@+id/btnRunRx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/runRx"
        app:layout_constraintLeft_toRightOf="@id/btnRunKt"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintTop_toTopOf="@id/btnRunKt" />
</androidx.constraintlayout.widget.ConstraintLayout>